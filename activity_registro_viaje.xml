    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:orientation="vertical"
        android:padding="@dimen/padingLinearLayoutMainActivity">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_register_viaje_titulo"
            android:textColor="@color/colorNegro"
            android:textSize="@dimen/txtTitulosRegister"
            android:textStyle="bold"></TextView>
        <TextView
            android:id="@+id/txtIdCuentaViaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="ID"
            android:visibility="invisible"
            android:textColor="@color/colorNegro"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/txt_register_viaje_origen"
            android:textColor="@color/colorMedioNegro"
            android:textSize="@dimen/txtTitulosRegister"
            android:textStyle="normal"></TextView>
        <Spinner
            android:id="@+id/spinnerOrigenViaje"
            android:layout_width="@dimen/widthSpinnerEmpresa"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/marginTopEditTextRegister"
            android:textAlignment="center"
            android:layout_marginBottom="@dimen/marginTopEditTextRegister"></Spinner>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/txt_register_viaje_destino"
            android:textColor="@color/colorMedioNegro"
            android:textSize="@dimen/txtTitulosRegister"
            android:textStyle="normal"></TextView>
        <Spinner
            android:id="@+id/spinnerLlegadaViaje"
            android:layout_width="@dimen/widthSpinnerEmpresa"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/marginTopEditTextRegister"
            android:textAlignment="center"
            android:layout_marginBottom="@dimen/marginTopEditTextRegister"></Spinner>
