                android:id="@+id/txtRegisterFechaLlegadaViaje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:hint="@string/txt_register_viaje_fecha_fin"
                android:textColor="@color/colorMedioNegro"
                android:textSize="@dimen/txtTitulosRegister"
