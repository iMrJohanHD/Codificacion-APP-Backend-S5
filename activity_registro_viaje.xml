        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
            android:id="@+id/btnRegisterFechaInicioViaje"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginTopBtnEntrarMainActivity"
            android:text="@string/txt_register_viaje_fecha_inicio"
            android:theme="@style/btnRaisedLogin"
            android:background="@drawable/boton3"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:id="@+id/txtRegisterFechaInicioViaje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:hint="@string/txt_register_viaje_fecha_inicio"
                android:textColor="@color/colorMedioNegro"
                android:textSize="@dimen/txtTitulosRegister"
                android:textStyle="italic"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnRegisterHoraInicioViaje"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginTopBtnEntrarMainActivity"
                android:text="@string/txt_register_viaje_hora_inicio"
                android:theme="@style/btnRaisedLogin"
                android:background="@drawable/boton3"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:id="@+id/txtRegisterHoraInicioViaje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:hint="@string/txt_register_viaje_hora_inicio"
                android:textColor="@color/colorMedioNegro"
                android:textSize="@dimen/txtTitulosRegister"
                android:textStyle="italic"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnRegisterFechaLlegadaViaje"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginTopBtnEntrarMainActivity"
                android:text="@string/txt_register_viaje_fecha_fin"
                android:theme="@style/btnRaisedLogin"
                android:background="@drawable/boton2"
                android:layout_gravity="center_horizontal"/>
