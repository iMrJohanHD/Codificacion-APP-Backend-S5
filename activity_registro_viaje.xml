        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnRegisterHoraLlegadaViaje"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginTopBtnEntrarMainActivity"
                android:text="@string/txt_register_viaje_hora_llegada"
                android:theme="@style/btnRaisedLogin"
                android:background="@drawable/boton2"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:id="@+id/txtRegisterHoraLlegadaViaje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:hint="@string/txt_register_viaje_hora_llegada"
                android:textColor="@color/colorMedioNegro"
                android:textSize="@dimen/txtTitulosRegister"
                android:textStyle="italic"></TextView>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_register_viaje_informacion_vehiculo"
            android:textColor="@color/colorNegro"
            android:textSize="@dimen/txtTitulosRegister"
            android:textStyle="bold"
            android:layout_marginTop="20dp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/txt_register_viaje_categoria_vehiculo"
            android:textColor="@color/colorMedioNegro"
            android:textSize="@dimen/txtTitulosRegister"
            android:textStyle="normal"></TextView>
        <Spinner
            android:id="@+id/spinnerCategoriaVehiculo"
            android:layout_width="@dimen/widthSpinnerEmpresa"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/marginTopEditTextRegister"
            android:textAlignment="center"
            android:layout_marginBottom="@dimen/marginTopEditTextRegister"></Spinner>
        <TextView
            android:id="@+id/txtValorSpinnerCategoriaViaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Categoria"
            android:textColor="@color/colorMedioNegro"
            android:visibility="invisible"
            android:textSize="@dimen/txtTitulosRegister"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/txt_regsiter_viaje_cupo_vehiculo"
            android:textColor="@color/colorMedioNegro"
            android:textSize="@dimen/txtTitulosRegister"
            android:textStyle="normal"></TextView>
        <Spinner
            android:id="@+id/spinnerCupoVehiculo"
            android:layout_width="@dimen/widthSpinnerEmpresa"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/marginTopEditTextRegister"
            android:textAlignment="center"
            android:layout_marginBottom="@dimen/marginTopEditTextRegister"></Spinner>
        <TextView
            android:id="@+id/txtRegisterIdViaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:textColor="@color/colorMedioNegro"
            android:textSize="@dimen/txtTitulosRegister"
            android:textStyle="normal"></TextView>
        <Button
            android:id="@+id/btnRegisterViaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/btn_register_viaje"
            android:theme="@style/btnRaisedLogin"
            android:background="@drawable/boton1"/>

    </LinearLayout>
