<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_fragmentViajes_origen"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_weight="2">
            </TextView>
            <TextView
                android:id="@+id/txtFrViajesOrigen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:hint="@string/txt_fragmentViajes_origen"
                android:layout_weight="2.0"></TextView>
            <Button
                android:id="@+id/btnFragmentViajesEliminar"
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:textSize="14dp"
                android:text="@string/btn_fragmentViajes_eliminar_viajes"
                android:textColor="@color/colorBlanco"
                android:background="@drawable/boton2"></Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_fragmentViajes_destino"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_weight="2">
            </TextView>
            <TextView
                android:id="@+id/txtFrViajesDestino"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:hint="@string/txt_fragmentViajes_destino"
                android:layout_weight="1.1"></TextView>
            <TextView
                android:id="@+id/txtFrViajesIdRegistro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:visibility="invisible"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_fragmentViajes_cupo"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_weight="2">
            </TextView>
            <TextView
                android:id="@+id/txtFrViajesCupo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:hint="@string/txt_fragmentViajes_cupo"
                android:layout_weight="1.1"></TextView>
            <TextView
                android:id="@+id/txtFrViajesIdViaje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:visibility="invisible"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_fragmentViajes_fecha_inicio"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_weight="2">
            </TextView>
            <TextView
                android:id="@+id/txtFrViajesFechaSalida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:hint="@string/txt_fragmentViajes_fecha_inicio"
                android:layout_weight="1.1"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_fragmentViajes_fecha_llegada"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_weight="2">
            </TextView>
            <TextView
                android:id="@+id/txtFrViajesFechaLlegada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:hint="@string/txt_fragmentViajes_fecha_llegada"
                android:layout_weight="1.1"></TextView>
        </LinearLayout>
        <Button
            android:id="@+id/btnFragmentViajesMapa"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorBlanco"
            android:text="@string/btn_fragmentViajes_mostrar_ruta"
            android:background="@drawable/boton3">
        </Button>
    </LinearLayout>
</androidx.cardview.widget.CardView>